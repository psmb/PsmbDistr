{
    "name": "typo3/psmbdistr",
    "description" : "Psmb.ru Distribution",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "repositories": [
        {
            "url": "https://github.com/dimaip/neos-googleanalytics",
            "type": "vcs"
        }
    ],
    "require": {
        "neos/neos-development-collection": "2.3.x-dev",
        "neos/flow-development-collection": "3.3.x-dev",
        "typo3/party": "@dev",
        "typo3/imagine": "@dev",
        "typo3/form": "@dev",
        "typo3/setup": "@dev",

        "typo3/buildessentials": "dev-master",
        "mikey179/vfsstream": "~1.6",
        "phpunit/phpunit": "~4.8 || ~5.4.0",
        "symfony/css-selector": "~2.0",
        "flowpack/behat": "dev-master",

        "ttree/contentrepositoryimporter": "^2.0",
        "sfi/youtube": "@dev",
        "psmb/term": "@dev",
        "psmb/nodetypes": "@dev",
        "psmb/createnodebutton": "@dev",
        "typo3/typo3cr-search": "@dev",
        "flowpack/elasticsearch-contentrepositoryadaptor": "@dev",
        "sfi/grid": "@dev",
        "psmb/mediaquery": "@dev",
        "neos/redirecthandler": "^1.0",
        "neos/redirecthandler-databasestorage": "^1.0",
        "neos/redirecthandler-neosadapter": "^1.0",
        "dimaip/groupby": "@dev",
        "psmb/mapreduce": "@dev",
        "typo3/neos-googleanalytics": "dev-dimaip-sort",
        "psmb/newsletter": "@dev"
    },
    "extra": {
  		"neos": {
  			"default-disabled-packages": ["flowpack/neos-frontendlogin", "typo3/neos-nodetypes"]
  		}
  	},
    "scripts": {
        "post-update-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "TYPO3\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install":"TYPO3\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
