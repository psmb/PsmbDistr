{
    "name": "psmb/psmbdistr",
    "description": "Psmb.ru Distribution",
    "config": {
        "vendor-dir": "Packages/Libraries",
        "bin-dir": "bin"
    },
    "require": {
        "neos/neos-development-collection": "3.0.x-dev",
        "neos/flow-development-collection": "4.0.x-dev",
        "neos/party": "~4.0.0",
        "neos/imagine": "~3.0.0",
        "neos/form": "~3.0.0",
        "neos/setup": "~4.0.0",

        "neos/content-repository-search": "@dev",
        "flowpack/elasticsearch": "@dev",
        "flowpack/elasticsearch-contentrepositoryadaptor": "dev-master",
        "neos/googleanalytics": "~2.0.0",
        "neos/redirecthandler": "@dev",
        "neos/redirecthandler-databasestorage": "@dev",
        "neos/redirecthandler-neosadapter": "@dev",

        "sfi/youtube": "@dev",
        "sfi/grid": "@dev",
        "psmb/term": "~3.0",
        "psmb/nodetypes": "~3.0",
        "psmb/createnodebutton": "~2.0",
        "flowpack/jobqueue-common": "@dev",
        "psmb/newsletter": "~2.0",
        "psmb/mediaquery": "~2.0",
        "psmb/mapreduce": "~2.0",
        "dimaip/groupby": "~2.0"
    },
    "extra": {
        "neos": {
            "default-disabled-packages": [
                "flowpack/neos-frontendlogin",
                "neos/neos-nodetypes"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-install-cmd": "Neos\\Flow\\Composer\\InstallerScripts::postUpdateAndInstall",
        "post-package-update": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall",
        "post-package-install": "Neos\\Flow\\Composer\\InstallerScripts::postPackageUpdateAndInstall"
    }
}
