prototype(Sfi.Site:NewsRelatedList) < prototype(T:Collection) {
	@context.relatedNews = ${q(node).property('relatedNews')}
	@if.isNotEmpty = ${ Type.isArray(relatedNews) && !Array.isEmpty(relatedNews)}
	@process.tmlp = ${'<div class="row-spacing-top--large">
		 <div class="block-title--strong">Ссылки по теме</div>
		 <ul class="medium-block-grid-2">' + value + '</ul>
	 </div>'}
	collection = ${relatedNews}
	itemName = 'node'
	itemRenderer = Sfi.Site:NewsShort
}
